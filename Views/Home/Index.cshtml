@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-outer" role="banner" aria-label="Hero">
    <div class="hero">
        <div class="left">
            <div class="kicker fade-in">Staging • Preview</div>

            <h1 class="display-4 fade-in delay-1">Welcome to <strong id="typed">Staging</strong></h1>
            <p class="lead fade-in delay-1">Ship faster, inspect production-like data and iterate quickly. Use the sample actions to explore the app.</p>

            <div class="mt-3 fade-in delay-2" role="group" aria-label="Primary actions">
                <a asp-controller="Customers" asp-action="Index" class="cta" aria-label="View customers">View Customers</a>
                <a href="~/Customers/Create" class="cta secondary" role="button">Add Customer</a>
            </div>

            <div class="stats fade-in delay-2" aria-hidden="false">
                <div class="stat">
                    <div class="num">1.2k</div>
                    <div class="small muted">Requests / hr</div>
                </div>
                <div class="stat">
                    <div class="num">320</div>
                    <div class="small muted">Active Customers</div>
                </div>
                <div class="stat">
                    <div class="num">99.9%</div>
                    <div class="small muted">Uptime</div>
                </div>
            </div>

            <div class="testimonial fade-in" style="margin-top:1.25rem;">
                <strong>“Great starting point for demos and prototypes — fast to iterate.”</strong>
                <div class="small muted">— Product Team</div>
            </div>
        </div>

        <div class="right">
            <div class="preview-frame fade-in delay-1" aria-hidden="true" role="img" aria-label="App preview">
                <svg viewBox="0 0 320 180" width="100%" height="100%" preserveAspectRatio="xMidYMid meet" style="display:block">
                    <defs>
                        <linearGradient id="g1b" x1="0" x2="1">
                            <stop offset="0" stop-color="#7c5cff" stop-opacity="0.95" />
                            <stop offset="1" stop-color="#4fb6ff" stop-opacity="0.95" />
                        </linearGradient>
                    </defs>

                    <rect x="6" y="6" rx="10" width="308" height="168" fill="url(#g1b)" opacity="0.12"></rect>

                    <g fill="#fff" opacity="0.95">
                        <circle cx="70" cy="50" r="10"></circle>
                        <rect x="110" y="40" rx="6" width="160" height="22"></rect>
                        <rect x="110" y="74" rx="6" width="140" height="16"></rect>
                        <rect x="110" y="104" rx="6" width="100" height="12"></rect>
                    </g>
                </svg>
            </div>
        </div>
    </div>

    <div class="hero-blob" aria-hidden="true"></div>
</div>

<script>
    // accessible typewriter with reduced-motion respect
    (function(){
        const el = document.getElementById('typed');
        const words = ['Staging','Your App','Fast Feedback','Customer Insights'];
        let w=0, i=0, forward=true;
        if(!el) return;

        function tick(){
            const word = words[w];
            if(forward){
                i++;
                if(i >= word.length){ forward = false; setTimeout(tick, 900); return; }
            } else {
                i--;
                if(i === 0){ forward = true; w = (w+1) % words.length; setTimeout(tick, 250); return; }
            }
            el.textContent = word.slice(0,i);
            setTimeout(tick, forward ? 90 : 40);
        }

        const mq = window.matchMedia('(prefers-reduced-motion: reduce)');
        if(!mq || !mq.matches) tick();
    })();
</script>