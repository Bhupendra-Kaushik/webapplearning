@model LearningWebApp.Models.Customer

@{
    ViewData["Title"] = "Add Customer";
}

<div class="hero-outer" role="region" aria-label="Add customer">
    <div class="hero">
        <div class="left">
            <div class="kicker fade-in">Customers</div>

            <h1 class="display-4 fade-in delay-1">Add a new <strong>Customer</strong></h1>
            <p class="lead fade-in delay-1">Quickly add a customer record. The form sits to the right — data entry is fast and focused.</p>

            <div class="mt-3 fade-in delay-2">
                <a asp-controller="Customers" asp-action="Index" class="cta" role="button">View Customers</a>
                <a asp-controller="Home" asp-action="Index" class="cta secondary" role="button">Home</a>
            </div>

            <div class="stats fade-in delay-2" style="margin-top:1rem;">
                <div class="stat">
                    <div class="num">320</div>
                    <div class="small muted">Customers</div>
                </div>
                <div class="stat">
                    <div class="num">12</div>
                    <div class="small muted">New (30d)</div>
                </div>
            </div>

            <div class="testimonial fade-in" style="margin-top:1rem;">
                <strong>“Fast data entry, ready for integration.”</strong>
                <div class="small muted">— Admin</div>
            </div>
        </div>

        <div class="right">
            <div class="form-panel fade-in delay-1" aria-labelledby="form-heading">
                <h2 id="form-heading">Add New Customer</h2>

                <form asp-action="Create" method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="form-field">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="custom-input" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>

                    <div class="form-field">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="custom-input" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>

                    <div class="form-field">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="custom-input" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="cta" aria-label="Save customer">Save</button>
                        <a asp-controller="Customers" asp-action="Index" class="btn-outline-light" role="button">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="hero-blob" aria-hidden="true"></div>
</div>

@section Scripts {
    @* Uncomment if client-side validation scripts are loaded in your layout *@
    @* <partial name="_ValidationScriptsPartial" /> *@
}
